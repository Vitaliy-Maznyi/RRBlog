<%= devise_error_messages! %>
<div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title"><strong>Sign Up </strong></h3></div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
          <label for="first name">First name</label>
          <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: 'Your first name'  %>
        </div>
        <div class="form-group">
          <label for="last name">Last name</label>
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Your last name'  %>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Your email'  %>
        </div>
        <div class="form-group">
          <label for="password">Password </label>
          <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Your password' %>
        </div>
        <div class="form-group">
          <label for="password">Password confirmation </label>
          <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirm Your password' %>
        </div>
        <%= f.submit 'Sign up', class: 'btn btn-default' %>
    <% end %>
    <hr>
    <p>Already have an account? <%= link_to 'Sign In', new_session_path(resource_name) %></p>
  </div>
</div>

